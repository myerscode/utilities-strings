{
  "name": "myerscode/utilities-strings",
  "description": "A PHP utility class that creates a fluent interface for interacting with strings",
  "keywords": [
    "text",
    "string",
    "words",
    "utility",
    "library",
    "toolkit",
    "manipulation",
    "chaining",
    "fluent"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "myerscode",
      "email": "team@myerscode.com",
      "homepage": "https://myerscode.com"
    },
    {
      "name": "Fred Myerscough",
      "email": "fred@myerscough.co.uk",
      "homepage": "https://fredmyerscough.co.uk"
    }
  ],
  "require": {
    "php": "^7.3|8.0.*",
    "ext-mbstring": "*",
    "ext-json": "*",
    "ext-ctype": "*",
    "ext-iconv": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "Myerscode\\Utilities\\Strings\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  }
}
