{
  "name": "myerscode/utilities-strings",
  "description": "A PHP utility class that creates a fluent interface for interacting with strings",
  "keywords": [
    "text",
    "string",
    "words",
    "utility",
    "library",
    "toolkit",
    "manipulation",
    "chaining",
    "fluent"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "myerscode",
      "email": "team@myerscode.com",
      "homepage": "https://myerscode.com"
    },
    {
      "name": "Fred Myerscough",
      "email": "fred@myerscough.co.uk",
      "homepage": "https://fredmyerscough.co.uk"
    }
  ],
  "require": {
    "php": "^8.3",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.2.0"
  },
  "autoload": {
    "psr-4": {
      "Myerscode\\Utilities\\Strings\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "tests": "vendor/bin/phpunit --testdox --no-coverage --colors=always",
    "test-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --testdox --colors=always",
    "phpcs": "vendor/bin/phpcs src tests --standard=PSR12"
  }
}
